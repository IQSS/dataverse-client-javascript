  "description": "Dataverse API wrapper package for JavaScript/TypeScript-based applications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest -c jest.config.js",
