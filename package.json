    "test:integration": "jest -c jest.config.integration.js",
    "test:coverage": "jest --coverage -c jest.config.js",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts"
